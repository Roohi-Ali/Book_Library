<body>
    
    <div class="container">
        <br><h2>Welcome to CodeGirls Library</h2><br><br><br>
        <form method="POST" action="/">
          <div class="form-group">
            <label for="name">User Name:</label>
            <input type="name" class="form-control" id="name" name="name" placeholder="Enter user name">
          </div>
          <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" id="pwd" name="pwd" placeholder="Enter password">
            <div class="text-danger small">
              <%= message %>
            </div>
          </div>
          <div class="checkbox">
            <label><input type="checkbox"> Remember me</label>
          </div>
          <button type="submit" class="btn btn-dark" formaction="/login">Submit</button>

          <!-- Register buttons -->
        <div class="text-center">
        <p>Not a member? <button type="submit" class="btn btn-dark" formaction="/register">Register</button></p>

        </form>
      </div>


