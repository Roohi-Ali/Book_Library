<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <%- include('navbar.ejs') %>

</head>
<body>
    <div class="container">
<br>
        <form method="POST" action="/" >

            <div class="form-group">
                <h3>Add Book</h3>
                <label for="bname">Book Name:</label>
                <input type="text" class="form-control" id="bname" name="bname" placeholder="Enter Book name">
              </div>
              <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" class="form-control" id="author" name="author" placeholder="Enter author name">

                <button type="submit" class="btn btn-dark" formaction="/addOneBook">Add Book</button>
                
            </form>
            
                <br><br><br>
                <form method="POST" action="/fileupload" enctype="multipart/form-data">
                <label for="filename">File Upload:</label>
                <input type="file" class="form-control" id="filename" name="filename" placeholder="Enter File name">
                <button type="submit" class="btn btn-dark">Upload json file to add books</button>
                </form>

                <br><br>
            <form method="POST" action="/" >
                <h3>Remove Book</h3>
                <div class="form-group">
                    <label for="bname">Book Name:</label>
                    <input type="text" class="form-control" id="bname" name="bname" placeholder="Enter Book name to remove">
                  </div>
                    <button type="submit" class="btn btn-dark" formaction="/removeOneBook">Remove Book</button>
                </form>
    

    </div>
    <%- include('footer.ejs') %>
</body>
